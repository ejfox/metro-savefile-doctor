{
  "name": "metro-savefile-doctor",
  "version": "1.0.0",
  "description": "TUI tool for editing Subway Builder save files",
  "type": "module",
  "files": [
    "dist",
    "metro-loader.ts",
    "js-script-runner.ts",
    "scripts"
  ],
  "exports": {
    ".": "./dist/metro-loader.js",
    "./metro-loader": "./dist/metro-loader.js",
    "./js-script-runner": "./dist/js-script-runner.js"
  },
  "bin": {
    "metro-savefile-doctor": "./cli.js"
  },
  "scripts": {
    "start": "tsx cli.tsx",
    "dev": "tsx watch cli.tsx",
    "build": "esbuild cli.tsx ui.tsx --bundle --platform=node --format=esm --outdir=dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ejfox/metro-savefile-doctor.git"
  },
  "keywords": [
    "metro-maker",
    "savefile",
    "editor",
    "tui",
    "ink",
    "cli"
  ],
  "author": "EJ Fox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ejfox/metro-savefile-doctor/issues"
  },
  "homepage": "https://github.com/ejfox/metro-savefile-doctor#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-text-input": "^6.0.0",
    "meow": "^13.2.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.1",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
