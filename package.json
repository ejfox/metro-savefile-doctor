  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ejfox/metro-savefile-doctor/issues"
  },
  "homepage": "https://github.com/ejfox/metro-savefile-doctor#readme",
  "dependencies": {
    "ink": "^5.0.1",
    "ink-text-input": "^6.0.0",
    "ink-select-input": "^6.0.0",
    "react": "^18.3.1",
    "meow": "^13.2.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "@types/react": "^18.3.1",
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.2"
  }
