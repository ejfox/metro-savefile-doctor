{
  "name": "metro-savefile-doctor",
  "version": "1.0.0",
  "description": "TUI tool for editing Subway Builder save files",
  "type": "module",
  "bin": {
    "metro-savefile-doctor": "./cli.js"
  },
  "scripts": {
    "start": "tsx cli.tsx",
    "dev": "tsx watch cli.tsx",
    "build": "esbuild cli.tsx ui.tsx --bundle --platform=node --format=esm --outdir=dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ejfox/metro-savefile-doctor.git"
  },
  "keywords": ["metro-maker", "savefile", "editor", "tui", "ink", "cli"],
